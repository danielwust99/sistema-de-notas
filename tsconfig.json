{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",

        "outDir": "./public",
        "rootDirs": ["public", "tests"],

        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["public"]
}
