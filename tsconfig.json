{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",

        "outDir": "./out",
        "rootDirs": ["src", "tests"],

        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
